<div data-controller="burger">
  <%= render "shared/burger" %>

  <% if params[:controller] == "pages" && params[:action] == "home" %>
    <div class="nav__home" data-controller="navbar"
                          data-action="scroll@window->navbar#updateNavbar"
                          data-navbar-target="navbar">
  <% elsif params[:controller] == "users" && params[:action] == "show" %>
    <div class="nav" style="display:none">
  <% else %>
    <div class="nav">
  <% end %>
    <div class="nav__left">
      <div class="icon">
        <%= link_to image_tag("logo_2.png"), root_path, { class: "logo" } %>
      </div>
      <div>
        <%= link_to "EXPLORE", root_path, class: "nav__links__left" %>
      </div>
      <div class="search__bar__nav search___nav">
        <button><i class="fa-solid fa-magnifying-glass"></i></button>
        <form action="/projects" method="get">
        <input name="query"
              type="text"
              class="search__bar__nav"
              params="[:query]"
              placeholder=" Find your NGO"
              data-navbar-target="input"
              >
        </form>
      </div>
    </div>
    <div class="nav__right">
        <div>
          <span class="category">CATEGORY</span>
          <%= render "shared/category" %>
        </div>
        <%= link_to "START PROJECTS", new_project_path, class: "nav__links" %>
        <button class="burger__icon" data-action="click->burger#show">
          <i class="fa-solid fa-bars"></i>
        </button>
    </div>
  </div>
</div>
