<div class="fix-spacing show__title">
  <h1><strong><%= @project.name %></strong></h1>
  <h5></h5>
  <main>
    <div class="show__upper__side">
      <div class="photo__project">
        <%# <% if @project.photo.attached? %>
        <%# <%= cl_image_tag @project.photo.key, width: 250, height: 150 %>
        <%# <% else %>
          <% if @project.name == "Save our oceans!" %>
            <img src="https://images.unsplash.com/photo-1621451537084-482c73073a0f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1548&q=80" alt="" class="show__photo">
          <% elsif @project.name == "Clean up our coastlines!" %>
            <img src="https://images.unsplash.com/photo-1526951521990-620dc14c214b?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80" alt="" class="show__photo">
          <% elsif !$counter_new.include?(@project.id) %>
            <img src="<%= $photos[$counter.index(@project.id)] %>" alt="" class="show__photo">
          <% else %>
            <img src="<%= $photos_new[$counter_new.index(@project.id)] %>" alt="" class="show__photo">
          <% end %>
      </div>
      <div class="price__section">
        <div class="price__section__details">
          <div>
            <% if @pledge %>
              <% sum = 0 %>
              <% @project.contributions.each do |contribution| %>
                <% sum += contribution.amount %>
              <% end %>
              <h4><%= number_to_currency(sum, precision: 0) %></h4>
              <p>pledged until today!</p>
              <h4><%= @project.contributions.count %></h4>
              <p>contributions in total!</p>
              <h4><%= @project.created_at.to_date %></h4>
              <p>date started</p>
            <% else %>
              <h4>$80,161</h4>
              <p>pledged until today!</p>
              <h4>1,396</h4>
              <p>contributions in total!</p>
              <h4>13</h4>
              <p>date started</p>
            <% end %>
          </div>
        </div>
        <div class="price__section__bottom">
          <span><%= link_to "Support this project", new_project_contribution_path(@project.id), class: "price__section__bottom__text" %> <i class="price__section__bottom__text__check fas fa-check"></i></span>
        </div>
      </div>
    </div>

    <div class="show__lower__side">
      <div class="story">
        <h2>Story</h2>
        <% if @project.name == "Save our oceans!" %>
          <img src="https://images.unsplash.com/photo-1562027224-de24a4d4acf4?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=871&q=80" alt="" class="show__photo">
        <% elsif @project.name == "Clean up our coastlines!" %>
          <img src="https://images.unsplash.com/photo-1592354218822-e43de51a8b33?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=872&q=80" alt="" class="show__photo">
        <% elsif %>
          <img src="https://images.unsplash.com/photo-1534996858221-380b92700493?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1931&q=80" alt="" class="show__photo">
        <% else @project.photo.attached? %>
          <%= cl_image_tag @project.photo.key, width: 250, height: 150 %>
        <% end %>
        <h4><%= @project.paragraph_title %></h4>
        <p><%= @project.description %></p>
      </div>
      <div class="contribution__cards">
        <div class="contribution__your__amount">
          <div class="pledge__text">
          <h4>Contribute with your amount</h4>
          <div class="contribution__box">
            <span>$</span>
            <input type="text" placeholder="10">
          </div>
          <p>Support our project with an amout <br>you would like to pay.</p>
          </div>
        </div>
        <div class="contibution__fixed__box">
          <div class="contibution__fixed__box__card">
            <% if @project.photo.attached? %>
              <%= cl_image_tag @project.photo.key, width: 250, height: 150 %>
            <% else %>
              <img class="pledge__photo" src="https://images.unsplash.com/photo-1553532435-93d532a45f15?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2574&q=80" alt="">
            <% end %>
            <div class="pledge__text">
              <% if @pledge %>
                <h4><%= number_to_currency(@pledge.price, precision: 0) %> or more</h4>
                <h5><%= @pledge.title %></h5>
                <ul>
                  <li><%= @pledge.description %></li>
                </ul>
              <% else %>
                <h4>$ 100 or more</h4>
                <h5>Add your title</h5>
                <ul>
                  <li>Add your description</li>
                </ul>
              <% end %>
              <% if @project.contributions.count == 1 %>
                <p><%= @project.contributions.count %> person contributed</p>
              <% else %>
                <p><%= @project.contributions.count %> people contributed</p>
              <% end %>
            </div>
            <%= link_to "", new_project_contribution_path(@project.id), class: "show__home__bottom__right__card__link" %>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
